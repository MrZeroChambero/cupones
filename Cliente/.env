# Host donde vive el backend PHP (incluye protocolo)
VITE_API_HOST=http://localhost

# Puerto expuesto por el backend PHP (8000 si usas `php -S localhost:8000 -t Servidor`)
VITE_API_PORT=8080

# Path donde vive la carpeta Servidor dentro del host (usa / si expones Servidor como raíz)
VITE_API_PATH=/cupones/servidor

# Si prefieres, puedes definir directamente la URL completa (tiene prioridad)
VITE_API_BASE_URL=

# Establecer en true para consumir los mocks locales de /public/api/*.json
VITE_USAR_MOCKS=false

# Puerto usado por Vite durante el desarrollo (sólo referencia)
VITE_DEV_SERVER_PORT=5173
